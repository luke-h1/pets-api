enum PetStatus {
  AVAILABLE
  PENDING
  ADOPTED
}

model Pet {
  id        String    @id @default(uuid())
  name      String
  type      String
  breed     String
  status    PetStatus @default(AVAILABLE)
  birthDate DateTime
  weight    Float
  photoUrl  String
  tags      Tag[]

  creatorId String
  creator   User     @relation(fields: [creatorId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("pets")
}
